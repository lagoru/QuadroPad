<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Network Settings">
    	<CheckBoxPreference android:defaultValue="false" android:title="Advanced Debug" android:summary="Enable/Disable Advanced Debug" android:key="auxbyte" android:summaryOn="Enabled" android:summaryOff="Disabled"></CheckBoxPreference>
        <EditTextPreference android:key="ipaddress" android:title="IP Address" android:summary="IP to send controller data" android:defaultValue="192.168.1.164"></EditTextPreference>
        <EditTextPreference android:key="port" android:title="Port" android:summary="Port to send controller data" android:defaultValue="4444"></EditTextPreference>
        <EditTextPreference android:key="txinterval" android:title="Packet Tx Interval" android:summary="Value (in ms) of packet xmit" android:defaultValue="25"></EditTextPreference>
    </PreferenceCategory>
</PreferenceScreen>